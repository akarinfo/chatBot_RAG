# LLM provider (recommended: deepseek)
LLM_PROVIDER=deepseek

# DeepSeek (OpenAI-compatible)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# DEEPSEEK_BASE_URL=https://api.deepseek.com
# DEEPSEEK_MODEL=deepseek-chat
# DEEPSEEK_TEMPERATURE=0.2

# Optional: OpenAI (if you want to switch)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4.1-mini
# OPENAI_TEMPERATURE=0.2

# Embeddings (retrieval). API only.
# Use DashScope native embeddings (Tongyi/Qwen)
EMBED_PROVIDER=dashscope
DASHSCOPE_API_KEY=your_dashscope_api_key_here
# DASHSCOPE_EMBED_MODEL=text-embedding-v2

# If you prefer OpenAI embeddings:
# EMBED_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_EMBED_MODEL=text-embedding-3-large

# Vector DB (Weaviate)
WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your_weaviate_api_key_here
# WEAVIATE_CLASS=RAGChunk
# WEAVIATE_REBUILD=1
