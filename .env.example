# LLM provider (recommended: deepseek)
LLM_PROVIDER=deepseek

# DeepSeek (OpenAI-compatible)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# DEEPSEEK_BASE_URL=https://api.deepseek.com
# DEEPSEEK_MODEL=deepseek-chat
# DEEPSEEK_TEMPERATURE=0.2

# Optional: OpenAI (if you want to switch)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4.1-mini
# OPENAI_TEMPERATURE=0.2

# Embeddings (retrieval). API only.
# Use ModelScope embeddings via OpenAI-compatible endpoint
EMBED_PROVIDER=modelscope
MODELSCOPE_API_TOKEN=your_modelscope_token_here
# MODELSCOPE_BASE_URL=https://api-inference.modelscope.cn/v1
# MODELSCOPE_EMBED_MODEL=Qwen/Qwen3-Embedding-8B

# If you prefer OpenAI embeddings:
# EMBED_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_EMBED_MODEL=text-embedding-3-large

# Vector DB (Weaviate)
WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your_weaviate_api_key_here
# WEAVIATE_CLASS=RAGChunk
# WEAVIATE_REBUILD=1

# PostgreSQL
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/chatbot_rag

# 连接池（可选）
APP_DB_POOL_SIZE=5
APP_DB_MAX_OVERFLOW=10
APP_DB_POOL_RECYCLE=1800

# 默认部门（可选）
APP_DEFAULT_DEPARTMENT=default

# 开发环境可选自动建表（生产建议保持 0）
APP_AUTO_CREATE_SCHEMA=0